<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awise.storage.mapper.AwToolclassificationMapper">
    
    <resultMap type="AwToolclassification" id="AwToolclassificationResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="notes"    column="notes"    />
    </resultMap>

    <sql id="selectAwToolclassificationVo">
        select id, name, notes from aw_toolclassification
    </sql>

    <select id="selectAwToolclassificationList" parameterType="AwToolclassification" resultMap="AwToolclassificationResult">
        <include refid="selectAwToolclassificationVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectAwToolclassificationById" parameterType="Long" resultMap="AwToolclassificationResult">
        <include refid="selectAwToolclassificationVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAwToolclassification" parameterType="AwToolclassification" useGeneratedKeys="true" keyProperty="id">
        insert into aw_toolclassification
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="notes != null">notes,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="notes != null">#{notes},</if>
         </trim>
    </insert>

    <update id="updateAwToolclassification" parameterType="AwToolclassification">
        update aw_toolclassification
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="notes != null">notes = #{notes},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAwToolclassificationById" parameterType="Long">
        delete from aw_toolclassification where id = #{id}
    </delete>

    <delete id="deleteAwToolclassificationByIds" parameterType="String">
        delete from aw_toolclassification where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
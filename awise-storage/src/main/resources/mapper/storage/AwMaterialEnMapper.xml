<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awise.storage.mapper.AwMaterialEnMapper">
    
    <resultMap type="AwMaterialEn" id="AwMaterialEnResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="specification"    column="specification"    />
        <result property="specificationModel"    column="specificationModel"    />
        <result property="materialDensity"    column="materialDensity"    />
        <result property="notes"    column="notes"    />
    </resultMap>

    <sql id="selectAwMaterialEnVo">
        SELECT
        aw_material.id,
        aw_material.`name`,
        aw_material.notes,
        aw_materialclassification.`name` AS type,
        aw_specifications.type AS specification,
        aw_specifications.specificationModel,
        aw_material.materialDensity
        FROM
        aw_material
        LEFT JOIN aw_specifications ON aw_material.specificationsID = aw_specifications.id
        LEFT JOIN aw_materialclassification ON aw_material.typeID = aw_materialclassification.id
    </sql>

    <select id="selectAwMaterialEnList" parameterType="AwMaterialEn" resultMap="AwMaterialEnResult">
        <include refid="selectAwMaterialEnVo"/>
        <where>  
            <if test="name != null  and name != ''"> and aw_material. name like concat('%', #{name}, '%')</if>
            <if test="type != null and type != ''"> and aw_materialclassification.name like concat('%', #{type}, '%')</if>
            <if test="specification != null  and specification != ''"> and aw_specifications.type like concat('%', #{specification}, '%')</if>
            <if test="materialDensity != null  and materialDensity != ''"> and materialDensity like concat('%', #{materialDensity}, '%')</if>
            <if test="notes != null  and notes != ''"> and  aw_material.notes like concat('%', #{notes}, '%')</if>
        </where>
    </select>
</mapper>
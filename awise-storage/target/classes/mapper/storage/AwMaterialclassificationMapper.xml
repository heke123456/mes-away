<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awise.storage.mapper.AwMaterialclassificationMapper">
    
    <resultMap type="AwMaterialclassification" id="AwMaterialclassificationResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="notes"    column="notes"    />
    </resultMap>

    <sql id="selectAwMaterialclassificationVo">
        select id, name, notes from aw_materialclassification
    </sql>

    <select id="selectAwMaterialclassificationList" parameterType="AwMaterialclassification" resultMap="AwMaterialclassificationResult">
        <include refid="selectAwMaterialclassificationVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="notes != null  and notes != ''"> and notes like concat('%', #{notes}, '%')</if>
        </where>
    </select>
    
    <select id="selectAwMaterialclassificationById" parameterType="Long" resultMap="AwMaterialclassificationResult">
        <include refid="selectAwMaterialclassificationVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAwMaterialclassification" parameterType="AwMaterialclassification" useGeneratedKeys="true" keyProperty="id">
        insert into aw_materialclassification
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="notes != null">notes,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="notes != null">#{notes},</if>
         </trim>
    </insert>

    <update id="updateAwMaterialclassification" parameterType="AwMaterialclassification">
        update aw_materialclassification
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="notes != null">notes = #{notes},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAwMaterialclassificationById" parameterType="Long">
        delete from aw_materialclassification where id = #{id}
    </delete>

    <delete id="deleteAwMaterialclassificationByIds" parameterType="String">
        delete from aw_materialclassification where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
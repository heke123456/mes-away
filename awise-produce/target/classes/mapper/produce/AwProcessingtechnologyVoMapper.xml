<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awise.produce.mapper.AwProcessingtechnologyVoMapper">
    <resultMap type="AwProcessingtechnologyVo" id="AwProcessingtechnologyVoResult">
        <result property="id"    column="id"    />
        <result property="founder"    column="founder"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="createTime"    />
        <result property="productID"    column="ProductID"    />
        <result property="name"    column="status"    />
        <result property="drawingURL"    column="drawingURL"    />
        <result property="orderID"    column="orderID"    />
    </resultMap>

    <sql id="selectAwProcessingtechnologyVo">
        select aw_processingtechnology. id, aw_processingtechnology. orderID, aw_processingtechnology.createTime, aw_processingtechnology.founder, aw_processingtechnology.status,aw_processingtechnology.productID,aw_product.name,aw_product.drawingURL from aw_processingtechnology left join aw_product on  aw_processingtechnology.productID=aw_product.id
    </sql>


    <select id="selectAwProcessingtechnologyByIdVo"
            resultType="com.awise.produce.domain.Vo.AwProcessingtechnologyVo"  parameterType="String">
        <include refid="selectAwProcessingtechnologyVo"/>

        where aw_processingtechnology.id = #{id}
    </select>
    <select id="selectAwProcessingtechnologyListVo"
            parameterType="AwProcessingtechnology"
            resultType="com.awise.produce.domain.Vo.AwProcessingtechnologyVo">
        <include refid="selectAwProcessingtechnologyVo"/>
       <where>
            <if test="createTime != null "> and createTime = #{createTime}</if>
            <if test="id != null and id!='' "> and id = #{id}</if>
            <if test="founder != null  and founder != ''"> and founder = #{founder}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>


</mapper>
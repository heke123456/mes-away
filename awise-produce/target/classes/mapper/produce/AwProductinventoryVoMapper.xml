<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awise.produce.mapper.AwProductinventoryVoMapper">
    
    <resultMap type="awProductinventoryVo" id="AwProductinventoryResult">
        <result property="id"    column="id"    />
        <result property="productID"    column="productID"    />
        <result property="number"    column="number"    />
        <result property="weight"    column="weight"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectAwProductinventoryVo">
        select aw_ProductInventory.id, aw_product. name, aw_ProductInventory.productID, aw_ProductInventory.number, aw_ProductInventory.weight from aw_ProductInventory left join  aw_product  on aw_product.id = aw_ProductInventory.productID
    </sql>

    <select id="selectAwProductinventoryList" parameterType="AwProductinventoryVo" resultMap="AwProductinventoryResult">
        <include refid="selectAwProductinventoryVo"/>
        <where>  
            <if test="productID != null  and productID != ''"> and productID = #{productID}</if>
            <if test="number != null "> and number = #{number}</if>
            <if test="weight != null "> and weight = #{weight}</if>
            <if test="name != null "> and weight = #{name}</if>
        </where>
    </select>

</mapper>